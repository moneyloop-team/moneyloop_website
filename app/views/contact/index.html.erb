<%# Title Card %>
<div class="moneyloop-color-gradient title-card">
    <div class="container">
        <div class="row">
            <div class="title mb40 col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                We are here to help you
            </div>
        </div>
    </div>
</div>

<%# Contact Us form %>
<%= render "shared/contact" %>

<%# Contact information %>
<section>
    <div class="container">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="contact-us mb60">
                    <%# Some Description %>
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="mb60 text-center section-title">
                                <p class="lead">
                                    With our credit decisioning engine we are able to accept any customer you send us. <br/>
                                    We use our score to determine the required discount to service the customer. <br/>
                                    This includes your customers who are eligible for financial hardship. <br/>                    
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <%# Address %>
                        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12">
                            <div class="bg-boxshadow pinside60 outline text-center mb30 box-size">
                                <h2 class="capital-title">Branch Office</h2>
                                <p>Level 4, 11 York Street<br/>Sydney NSW.</p>
                            </div>
                        </div>
                        <%# Phone number %>
                        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12">
                            <div class="bg-boxshadow pinside60 outline text-center mb30 box-size">
                                <h2 class="capital-title">Call us at </h2>
                                <h2>1300 339 993</h2>
                            </div>
                        </div>
                        <%# Email Address %>
                        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12">
                            <div class="bg-boxshadow pinside60 outline text-center mb30 box-size">
                                <h2 class="capital-title">Email Address</h2>
                                <p>hello@moneyloop.com</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>