<div class = "pinside20">
  <%# Featured Image %>
  <div class="text-center">
    <%= image_tag(post.featured_image, class: "img-banner pdb20") if post.featured_image %>
  </div>

  <%# Title %>
  <h2><%= link_to post.title, buttercms_post_path(post.slug), :title => post.title %></h2>

  <%# Author %>
  <%= link_to "#{post.author.first_name} #{post.author.last_name}", buttercms_author_path(post.author.slug) %>

  <%# Summary and Categories %>
  <% if with_summary %>
    <p>
      <%= post.summary %> <br/>
      <%= link_to "> Read More", buttercms_post_path(post.slug), title: post.title %> <br/>
      <% post.categories.each do |category| %>
        <%= link_to category.name, buttercms_category_path(category.slug), :title => category.name, class: "btn btn-small marginside10" %>
      <% end %>
    </p>
  <% end %>
</div>
