<%= content_for :html_title, "#{@author.first_name} #{@author.last_name}" %>
<%= content_for :meta_description, @author.bio %>

<section class="container">
  <div class="row">
    <%# Profile Image %>
    <div class="text-center col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
      <% if @author.profile_image %>
        <img src="<%= @author.profile_image %>" class="img-lg" />
      <% end %>
    </div>

    <%# Author Bio %>
    <div class = "col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
      <h1><%= @author.first_name %> <%= @author.last_name %></h1>
      <h3><%= @author.title %></h3>
      <p> <%= @author.bio %></p>
    </div>

    <%# Recent posts %>
    <div class="padding2 col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
      <h2>Recent posts</h2>
      <div class="row">
        <% @author.recent_posts.each do |post| %>
          <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12">
            <%= render :partial => 'blog/posts/post', :locals => {:post => post, with_summary: false} %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</section>
