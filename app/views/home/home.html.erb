<%# About %>
<section class="padding5 moneyloop-bg-grey">
    <h2 class="text-center mb40">Simple Steps for Insurers</h2>
    <div class="container">
        <div class="row">
            <div class="text-center col-xl-3 col-lg-3 col-md-3 col-sm-3 col-3" data-aos="zoom-out" data-aos-duration="1000" data-aos-offset="100">
                <%= image_tag "moneyloop/steps/customer-details.png", class: "img-md mb20" %>
                <p class="grey">
                    Enter customer details into the MoneyLoop platform
                </p>
            </div>
            <div class="text-center col-xl-3 col-lg-3 col-md-3 col-sm-3 col-3" data-aos="zoom-out" data-aos-duration="2000" data-aos-offset="120">
                <%= image_tag "moneyloop/steps/risk-check.png", class: "img-md mb20" %>
                <p class="grey">
                    A risk check is run through MoneyLoop’s proprietary, robust and secure system to calculate risk
                </p>
            </div>
            <div class="text-center col-xl-3 col-lg-3 col-md-3 col-sm-3 col-3" data-aos="zoom-out" data-aos-duration="2500" data-aos-offset="140">
                <%= image_tag "moneyloop/steps/offer.png", class: "img-md mb20" %>
                <p class="grey">
                    Offer your customer a white labelled payment plan
                </p>
            </div>
            <div class="text-center col-xl-3 col-lg-3 col-md-3 col-sm-3 col-3" data-aos="zoom-out" data-aos-duration="3000" data-aos-offset="180">
                <%= image_tag "moneyloop/steps/payment.png", class: "img-md mb20" %>
                <p class="grey">
                    Customer agrees and excess paid to insurer within 5 business days
                </p>
            </div>
        </div>
    </div>
</section>

