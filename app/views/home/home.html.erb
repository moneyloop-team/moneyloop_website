                        <%= image_tag "moneyloop/partners/car-next-door.png", alt: "Car Next Door" %>
                    </div>
                    <div class="item marginside30">
                        <%= image_tag "moneyloop/partners/splend.png", alt: "Splend" %>
                    </div>
                    <div class="item marginside30">
                        <%= image_tag "moneyloop/partners/carly-co.png", alt: "Carly.co" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

